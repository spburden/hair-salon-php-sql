<!DOCTYPE html>
<html>
    <body>
        <div class="container">
            <h1>Epic Hair Salon</h1>
            <h2>Stylist Update Page</h2>
            <h2>Edit {{ stylist.getName }}'s Information</h2>
            <form class="form-inline" action="/stylist/{{ stylist.getId }}/edit" method="post">
                <input name="_method" type="hidden" value="patch">
                <div class="form-group">
                    <input class="form-control" type="text" name="stylist_name" placeholder="Name" required>
                </div>
                <button type="submit" class="btn btn-success">Edit</button>
            </form>
            <form action="/stylist/{{ stylist.getId }}" method="get">
                <button type="submit" class="btn btn-primary">Back</button>
            </form>
        </div>
    </body>
</html>
